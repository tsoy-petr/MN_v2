<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".screens.testFragments.MenyNewArriveFragment">

    <Button
        android:id="@+id/btn_start_scaning"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Начать/Продолжить"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_goods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_goods"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Товары"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_discrepancies_goods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_scaning" />

    <Button
        android:id="@+id/btn_discrepancies_goods"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center|center_vertical"
        android:text="Расхождения"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ctemporarily_exit"
        app:layout_constraintTop_toBottomOf="@+id/btn_goods"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_ctemporarily_exit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Временно выйти"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_complete"
        app:layout_constraintTop_toBottomOf="@+id/btn_discrepancies_goods"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center|center_vertical"
        android:text="Завершить"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ctemporarily_exit"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>