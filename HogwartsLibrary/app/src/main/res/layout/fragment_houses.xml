<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scenes.houses.HousesFragment">

    <ImageView
        android:id="@+id/imgGryffindor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="0"
        android:src="@drawable/img_gryffindor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgHufflepuff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgRavenclaw"/>

    <ImageView
        android:id="@+id/imgHufflepuff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="1"
        android:src="@drawable/img_hufflepuff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgGryffindor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgSlytherin"/>

    <ImageView
        android:id="@+id/imgRavenclaw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="2"
        android:src="@drawable/img_ravenclaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGryffindor"
        app:layout_constraintEnd_toStartOf="@+id/imgSlytherin"/>

    <ImageView
        android:id="@+id/imgSlytherin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tag="3"
        android:src="@drawable/img_slytherin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHufflepuff"
        app:layout_constraintStart_toEndOf="@id/imgRavenclaw"/>


</androidx.constraintlayout.widget.ConstraintLayout>